<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>KKN SKOY</title>

    <!-- Custom fonts for this template-->
    <link href="/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="/assets/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/assets/css/sb-admin.css" rel="stylesheet">

</head>

<body id="page-top">
    <%- include('./partials/navbar.ejs') %>

    <div id="wrapper">

        <%- include('./partials/sidebar.ejs') %>

        <div id="content-wrapper">

            <div class="container-fluid">

                <!-- DataTables Example -->
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        Data KKN</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <button type="button" class="btn btn-primary" style="margin-bottom : 10px"
                                data-toggle="modal" data-target="#form-add">Tambah Data KKN</button>
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Nama</th>   
                                        <th>Fakultas</th>
                                        <th>Lokasi KKN</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Nama</th>
                                        <th>Fakultas</th>
                                        <th>Lokasi KKN</th>
                                        <th>Aksi</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% for (var i = 0 ; i < kknData.length ; i++) { %>
                                    <tr>
                                        <td><%= kknData[i].name %> </td>
                                        <td><%= kknData[i].faculty %> </td>
                                        <td><%= kknData[i].location %> </td>
                                        <td><button id="<%= kknData[i].name%> " class="btn btn-danger btn-xs"><span class="fa fa-trash"
                                            aria-hidden="true"></span></button></td>
                                    </tr>
                                    <%} %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->

            <%- include('./partials/modal.ejs') %>
            <%- include('./partials/footer.ejs') %>

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <%- include('./partials/js.ejs') %>

</body>

</html>